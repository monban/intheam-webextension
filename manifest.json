{
  "manifest_version": 2,
  "name": "inthe.am integration",
  "description": "Create inthe.am tasks directly from your browser",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "active_tab",
    "https://inthe.am/*",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/button-16.png",
      "32": "icons/button-32.png"
    },
    "default_popup": "popup/task.html",
    "default_title": "Create task on inthe.am"
  }
}
